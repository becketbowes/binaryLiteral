<div>
    <article>
        {{#each articles}}
        <img src="/assets/img/{{image}}" alt="{{imageAlt}}">
        <h3>{{title}}</h3>
        <h4>Written by {{reader.user}} on: {{createdAt}}, keywords: {{keywords}}</h4>
        <section>{{article}}</section>
        <h4><a><button type="button" class="neatasabutton" id="{{id}}">Neat!</button></a> {{ohNeat}} people thought this was neat. <a href="/literal/{{id}}">{{comments.length}} comments -></a></h4>
        {{/each}}
    </article>
</div>
<script src="/assets/script/neat.js"></script>