<article>
    {{#each articles}}
    {{#if image}}
    <img src="/assets/img/{{image}}" alt="{{alt}}">
    {{/if}}
    <h3>{{title}}</h3>
    <h4>Written by {{reader.user}} at: {{createdAt}}, keywords: {{keywords}}</h4>
    <section>{{article}}</section>
    <h4><a><button type="button" class="neatasabutton">Neat!</button></a> {{ohNeat}} people thought this was neat. <a><button type="button" class="literalpage"> {{comments.length}} more comments:</button></a></h4>
    {{/each}}
</article>
{{#if loggedin}}
<script src="/assets/script/neat.js"></script>
<script src="/assets/script/"></script>
{{/if}}