<form class="login">
    <div>
        <label for="email">email:</label>
        <input type="text" id="email"/>
    </div>
    <div>
        <label for="pass">password:</label>
        <input type="password" id="pass" />
    </div>
    <div>
        <label for="language">Would you like the text displayed in ascii binary or ascii english?</label>
        <select id="language">
            <option value="false">- ascii english</option>
            <option value="true">- ascii binary</option>
        </select>
    </div>
    <div>
        <label for="theme">How would you like to see the content displayed?</label>
        <select id="theme">
            <option value="true">- black text on white background</option>
            <option value="false">- white text on black background</option>
        </select>
    </div>
    <div>
        <button type="submit">signup -> </button>
    </div>
</form>
<script src="/assets/script/login.js"></script> 